<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FitnessUiCompose"
        tools:targetApi="31">
        <activity
            android:name=".activities.SettingActivity"
            android:exported="false"
            android:label="@string/title_activity_setting"
            android:theme="@style/Theme.FitnessUiCompose" />

        <receiver
            android:name=".activities.MyReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.FitnessUiCompose" />
        <activity
            android:name=".activities.BluetoothActivity"
            android:exported="false"
            android:label="@string/title_activity_bluetooth"
            android:theme="@style/Theme.FitnessUiCompose" />
        <activity
            android:name=".activities.VerifyPhoneActivity"
            android:exported="false"
            android:label="@string/title_activity_verify_phone"
            android:theme="@style/Theme.FitnessUiCompose" />
        <activity
            android:name=".activities.SignupActivity"
            android:exported="false"
            android:label="@string/title_activity_signup"
            android:theme="@style/Theme.FitnessUiCompose" />
        <activity
            android:name=".activities.ResetPasswordActivity"
            android:exported="false"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/Theme.FitnessUiCompose" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.FitnessUiCompose" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FitnessUiCompose">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.IntroActivity"
            android:exported="false"
            android:theme="@style/Theme.FitnessUiCompose" />
    </application>

</manifest>